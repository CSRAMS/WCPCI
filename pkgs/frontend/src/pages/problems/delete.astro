---
import ContestLayout from "@/layouts/ContestLayout.astro";
import DeleteForm from "@/components/forms/DeleteForm.astro";
import { variable } from "@/lib/tera";
---

<ContestLayout
    showAdminVar="true"
    noIndex
    path=`/contests/${variable("contest.id")}/problems/${variable("problem.slug")}/delete`
    title=`Delete ${variable("problem.name")}`
    makeTile
>
    <DeleteForm
        title=`Delete ${variable("problem.name")}`
        prompt="Are you sure you want to delete this problem?"
        backLink=`/contests/${variable("problem.contest_id")}/problems`
        breadcrumb={[
            ["Contests", "/contests"],
            [variable("contest.name"), `/contests/${variable("contest.id")}`],
            ["Problems", `/contests/${variable("contest.id")}/problems`],
            [
                variable("problem.name"),
                `/contests/${variable("contest.id")}/problems/${variable("problem.slug")}`
            ],
            [
                "Delete",
                `/contests/${variable("contest.id")}/problems/${variable("problem.slug")}/delete`
            ]
        ]}
    />
</ContestLayout>
